<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="ecust.mlkz.act_MLKZ_Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <!--登陆头像-->
        <widget.myCircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mlkz_default_head_image" />

        <!--用户名-->
        <widget.myEditText
            android:id="@+id/mlkz_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/edittext_username"
            android:drawablePadding="10dp"
            android:hint="用户名"
            android:maxLength="18"
            android:singleLine="true" />

        <!--密码-->
        <widget.myEditText
            android:id="@+id/mlkz_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/edittext_password"
            android:drawablePadding="10dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:singleLine="true" />

        <!--登陆按钮-->
        <Button
            android:id="@+id/mlkz_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_mlkz_login_button_cannot_press"
            android:text="登陆"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>