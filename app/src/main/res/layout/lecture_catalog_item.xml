<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    tools:context="ecust.lecture.act_Lecture_Catalog">
    <!--详细属性值注释见attr_CardView.xml-->
    <!--app:cardMaxElevation="20dp"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!--android:text="讲座标题"-->
        <TextView
            android:id="@+id/lecture_catalog_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <!--android:text="2015-10-1"-->
        <TextView
            android:id="@+id/lecture_catalog_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lecture_catalog_item_title"
            android:textSize="16sp" />

        <!--未开始-->
        <TextView
            android:id="@+id/lecture_catalog_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/lecture_catalog_item_date"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>