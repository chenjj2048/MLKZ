<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ecust.main.act_MainActivity">

    <!--华理助手 主界面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/mainActivity_MLKZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/green1"
            android:padding="20dp"
            android:text="@string/title_activity_act__mlkz__home_page" />

        <Button
            android:id="@+id/mainActivity_News"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/green1"
            android:padding="20dp"
            android:text="华理新闻" />

        <Button
            android:id="@+id/mainActivity_Lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/green1"
            android:padding="20dp"
            android:text="讲座信息" />

        <Button
            android:id="@+id/mainActivity_SchoolCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/green1"
            android:padding="20dp"
            android:text="校历" />

        <Button
            android:id="@+id/mainActivity_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/green1"
            android:padding="20dp"
            android:text="测试" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="V1.0 beta" />
</RelativeLayout>
