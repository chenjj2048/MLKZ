<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black26"
    android:orientation="vertical"
    tools:context="ecust.mlkz.fragment_MLKZ_LeftMenu">

    <!--头像-->
    <ImageView
        android:id="@+id/mlkz_home_menu_login_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:src="@drawable/mlkz_default_head_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MLKZ_LeftMenu_TextView"
        android:text="登陆我的账号,享有更多特权"/>

    <TextView
        style="@style/MLKZ_LeftMenu_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑签名" />

    <TextView
        style="@style/MLKZ_LeftMenu_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的好友" />

    <TextView
        style="@style/MLKZ_LeftMenu_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏" />

    <TextView
        style="@style/MLKZ_LeftMenu_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小尾巴" />

    <TextView
        style="@style/MLKZ_LeftMenu_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销" />

</LinearLayout>